<?xml version="1.0"?>
<ruleset name="PSR 2">
    
    <description>Includes all sources but ignores data files within integration tests.</description>

    <file>bin/</file>
    <file>src/</file>
    <file>tests/</file>
    
    <exclude-pattern>tests/Integration/data/*</exclude-pattern>
    <exclude-pattern>*/.idea/*</exclude-pattern>
    
    <rule ref="PSR2"/>
    
    <arg value="sp" />
    
</ruleset>